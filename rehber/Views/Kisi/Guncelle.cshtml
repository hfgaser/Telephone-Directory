@model rehber.Models.KisiModel.KisiGuncelleViewModel
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kişi Güncelle</h2>


@*<form class="form-horizontal" method="post" action="/Kisi/Guncelle/">*@

@using (Html.BeginForm("Guncelle", "Kisi", FormMethod.Post, new { @class = "form-horizontal" }))
{


    @Html.HiddenFor(x => x.Kisi.Id)

    <div class="form-group">

        @Html.LabelFor(x => x.Kisi.Ad)
        @Html.TextBoxFor(x => x.Kisi.Ad, null, new { @class = "form-control", required = "required" })

    </div>
    <div class="form-group">

        @Html.LabelFor(x => x.Kisi.SoyAd)
        @Html.TextBoxFor(x => x.Kisi.SoyAd, null, new { @class = "form-control", required = "required" })


    </div>
    <div class="form-group">

        @Html.LabelFor(x => x.Kisi.Telefon)
        @Html.TextBoxFor(x => x.Kisi.Telefon, null, new { @class = "form-control", required = "required" })

    </div>
    <div class="form-group">

        @Html.LabelFor(x => x.Kisi.Email)
        @Html.TextBoxFor(x => x.Kisi.Email, null, new { @class = "form-control",type = "email", required = "required" })

    </div>
    <div class="form-group">

        @Html.LabelFor(x => x.Kisi.Adres)
        @Html.TextBoxFor(x => x.Kisi.Adres, null, new { @class = "form-control", @rows = 4, required = "required" })

    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Kisi.SehirId)

        @*@Html.DropDownListFor(x => x.Kisi.SehirId, ViewBag.Sehirler as SelectList, new { @class = "form-control" })*@
        @Html.DropDownListFor(x => x.Kisi.SehirId, new SelectList(Model.Sehirler, "Id", "SehirAdi"), new { @class = "form-control" })

    </div>
    <input type="submit" class="btn btn-primary" value="Güncelle" />




    @*</form>*@



}